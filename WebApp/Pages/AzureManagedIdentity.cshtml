@page
@model AzureManagedIdentityModel
@{
    ViewData["Title"] = "Azure Managed Identity";
}
<h1>@ViewData["Title"]</h1>

<form method="POST">
    <p class="text-muted">Allows you to request an access token for the <a href="https://docs.microsoft.com/azure/active-directory/managed-identities-azure-resources/overview" target="_blank">managed identity representing your application</a> (when running on a supported Azure service).</p>
    <div class="form-group">
        <label for="resource">Resource (token audience)</label>
        <input type="text" name="resource" id="resource" value="@Model.GadgetRequest.Resource" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>

@if (Model.GadgetResponse != null)
{
    <div class="card">
        <h5 class="card-header">
            Token for <code>@Model.GadgetRequest.Resource</code>
            <small class="text-muted float-right">@DateTimeOffset.UtcNow.ToString("u") (UTC)</small>
        </h5>
        <div class="card-body">
            <pre>@Model.GadgetResponse.AccessToken</pre>
        </div>
    </div>
}

<partial name="_ExceptionCard" model="Model.Exception" />
