@page
@model DnsLookupModel
@{
    ViewData["Title"] = "DNS Lookup";
}
<h1>@ViewData["Title"]</h1>

<form method="POST">
    <p class="text-muted">Allows you to perform a DNS lookup from the web server and render the results below.</p>
    <div class="form-group">
        <label for="host">Host name (or IP address)</label>
        <input type="text" name="host" id="host" value="@Model.GadgetRequest.Host" class="form-control val-required" placeholder="The host name or IP address for which to perform a DNS lookup" title="You can set the default value as a 'DefaultDnsLookupHost' configuration setting" />
    </div>
    <div class="form-group">
        <label for="callChainUrls"><a asp-page="/Api" asp-fragment="call-chaining">Call Chain</a></label>
        <input type="text" name="callChainUrls" id="callChainUrls" value="@Model.GadgetRequest.CallChainUrls" class="form-control val-optional" placeholder="Optionally chain calls across multiple hops (separate base URL's by spaces)" title="You can set the default value as a 'DefaultCallChainUrls' configuration setting" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>

@Html.DisplayFor(m => m.GadgetResponse)